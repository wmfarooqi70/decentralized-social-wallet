  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:prod": "bash docker-production.bash",
    "docker:dev": "docker-compose build && docker-compose up -d",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migrate:generate": "yarn build && yarn typeorm migration:generate -- -n",
    "migrate:run": "yarn build && yarn typeorm migration:run",
    "migrate:revert": "yarn build && yarn typeorm migration:revert",
    "schema:drop": "yarn build && yarn typeorm schema:drop"
  },
  "dependencies": {
    "@bugsnag/js": "^7.16.1",
    "@bugsnag/plugin-express": "^7.16.1",
    "@google-cloud/storage": "^5.18.2",
